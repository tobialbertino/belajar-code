              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code":{
                      "type": "number"
                    },
                    "status" :{
                      "type": "string"
                    },
                    "data" :{
                      "$ref":  "#/components/schemas/Category"
                    }
                  }
                }
              }
            }
          }
        }
